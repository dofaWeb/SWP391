<!-- Header -->
<header class="bg-dark text-white text-center py-4">
    <h1>Enter Otp</h1>
</header>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>Enter OTP</h3>
            <h4 style="color: red">@ViewBag.Error</h4>
            <form asp-action="EnterOtp" asp-controller="Acc" method="post">
                <div class="form-group">
                    <label for="opt">OTP</label>
                    <input type="number" class="form-control" id="otp" placeholder="Enter Otp" name="OtpCode" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>