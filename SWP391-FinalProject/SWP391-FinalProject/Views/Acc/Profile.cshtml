@{
    Layout = "_AccLayout";
}
@model SWP391_FinalProject.Models.UserModel
<!-- Header -->
<header class="bg-dark text-white text-center py-4">
    <h1>Your Profile</h1>
</header>

<div class="container mt-4 profile-info">
    <h3>User Information</h3>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">Username</th>
                <td>@Model.Account.Username</td>
            </tr>
            <tr>
                <th scope="row">Full Name</th>
                <td> @Model.Name</td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td>@Model.Account.Email</td>
            </tr>
            <tr>
                <th scope="row">Phone Number</th>
                <td>@Model.Account.Phone</td>
            </tr>
           
            <tr>
                <th scope="row">Address</th>
                <td>
                    <select class="form-control" id="address">
                        @foreach(var item in Model.Address){
                        <option value="@item">@item.Address @item.Province</option>
                        }
                        
                    </select>
                </td> <!-- Province as select -->
            </tr>

            <tr>
                <th scope="row">Total Points</th>
                <td class="total-points">200</td>
            </tr>
            <tr>
                <th scope="row">Password</th>
                <td>
                    <div class="password-input">
                        <input type="password" id="password" class="form-control" value="12345678" readonly>
                        <span class="toggle-password" onclick="togglePasswordVisibility()">
                            <i class="fas fa-eye" id="eye-icon"></i>
                        </span>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="edit-btn">
        <a href="edit-profile.html" class="btn btn-primary">Edit Profile</a>
        <a asp-controller="Acc" asp-action="Logout" class="btn btn-danger">Logout</a>
    </div>
</div>