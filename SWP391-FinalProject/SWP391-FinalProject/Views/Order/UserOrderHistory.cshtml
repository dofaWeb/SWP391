@{
    Layout = "_AccLayout";
}
@model List<SWP391_FinalProject.Models.OrderModel>;

<style>
    .order-header {
        margin-bottom: 20px;
    }

    .points-summary {
        margin-bottom: 30px;
    }

    .points-earned {
        color: blue;
    }

    .approved-state{
        color: blue;
    }

    .pending-state {
        color: green;
    }

    .rejected-state {
        color: red;
    }

    .cancel-state {
        color: gray;
    }

    .points-used {
        color: red;
    }
</style>

<!-- Header -->
<header class="bg-dark text-white text-center py-4">
    <h1>Order History</h1>
</header>

<div class="container mt-4">
    <a asp-controller="User" asp-action="Profile" asp-route-username="@User.FindFirst("Username")?.Value" title="View profile" class="btn btn-secondary">Back To Profile</a>
    <h3>Your Past Orders</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Status</th>
                <th scope="col">Total Amount</th>
                <th scope="col">Points Earned</th>
                <th scope="col">Points Used</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                
                    var order_state = "";
                    switch (order.OrderState.Name)
                    {
                        case "Approve":
                            order_state = "approved-state";
                            break;
                        case "Pending":
                            order_state = "pending-state";
                            break;
                        case "Reject":
                            order_state = "rejected-state";
                        break;
                    case "Cancel":
                        order_state = "cancel-state";
                            break;
                    }
                
                <tr>
                    <td>@order.Date</td>
                    <td class="@order_state">@order.OrderState.Name</td>
                    <td>@string.Format("{0:N0}", (@order.TotalPrice - @order.UsePoint)) VND</td>
                    <td class="points-earned">@string.Format("{0:N0}", @order.EarnPoint)</td>
                    <td class="points-used">@string.Format("{0:N0}", @order.UsePoint)</td>
                    <td><a asp-action="UserOrderDetail" asp-controller="Order" asp-route-OrderId="@order.Id" class="btn btn-info btn-sm">View Details</a>
                        @if(order.OrderState.Name == "Pending") {
                            <a onclick="return confirm('Are you sure you want to delete this product?')" class="btn btn-danger btn-sm" asp-action="Cancel" asp-controller="Order" asp-route-id="@order.Id" asp-route-user_id="@order.UserId">Cancel</a>
                        }    
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
