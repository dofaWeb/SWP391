@{
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




@model IEnumerable<SWP391_FinalProject.Models.OrderModel>

<h2>List Order</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Order Code</th>
            <th>UserName</th>
            <th>Order Date</th>
            <th>Address</th>
            <th>State</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @* Lặp qua danh sách đơn hàng *@
        @if (Model != null)
        {
            int index = 1;
            foreach (var order in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@order.Id</td>  @* Sử dụng đúng tên thuộc tính *@
                    <td>@order.User.Name</td>
                    <td>@order.Date.ToString("MM/dd/yyyy hh:mm:ss tt")</td>
                    <td>@order.Addres</td>
                    <td>@order.OrderState.Name</td>
                   
                    <td>
                        <a href="#" class="btn btn-warning btn-sm">View</a>
                        <a href="#" class="btn btn-success btn-sm">Save</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No orders available</td>
            </tr>
        }
    </tbody>
</table>

