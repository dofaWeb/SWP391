@model IEnumerable<SWP391_FinalProject.Models.ProductModel>
@{
    ViewData["Title"] = "ProductsByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.type=="laptops")
{
    <h2 class="text-center">Laptops</h2>
}
else
{
    <h2 class="text-center">Phones</h2>
} 
<div class="row">
    @await Component.InvokeAsync("ProductCustomer", new
        {
            productType = "ProductsByCategory",
            str = ViewBag.type
        })
</div>

