@{
}


<div class="container px-0">
    <nav class="navbar navbar-light bg-white navbar-expand-xl">
        <a asp-action="Index" asp-controller="Pro" class="navbar-brand">
            <h1 class="text-primary display-6">Electronic Shop</h1>
        </a>
        <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarCollapse">
            <span class="fa fa-bars text-primary"></span>
        </button>
        <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
            <div class="navbar-nav mx-auto">
                <a asp-controller="Pro" asp-action="Index" class="nav-item nav-link active">Home</a>
                <a asp-controller="Pro" asp-action="Index" class="nav-item nav-link">Top selling</a>
                <a asp-controller="Pro" asp-action="Index" class="nav-item nav-link">Shop</a>
                <div class="nav-item dropdown">
                    <a asp-controller="Pro" asp-action="Index" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Category</a>
                    <div class="dropdown-menu m-0 bg-secondary rounded-0">
                        <a href="cart.html" class="dropdown-item">Laptop</a>
                        <a href="chackout.html" class="dropdown-item">Iphone</a>
                    </div>
                </div>
            </div>
            <div class="d-flex m-3 me-0">
                <a asp-controller="Cart" asp-action="Index" class="position-relative me-4 my-auto">
                    <i class="fa fa-shopping-bag fa-2x"></i>
                    <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">0</span>
                </a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Acc" asp-action="Profile" asp-route-username="@Context.User.Identity.Name" title="View profile" class="my-auto">
                        <i class="fas fa-user fa-2x"></i>
                    </a>
                }
                else
                {
                    <a asp-controller="Acc" asp-action="Login" title="Login" class="my-auto">
                        <i class="fas fa-user fa-2x"></i>
                    </a>
                }


            </div>
        </div>
    </nav>
</div>