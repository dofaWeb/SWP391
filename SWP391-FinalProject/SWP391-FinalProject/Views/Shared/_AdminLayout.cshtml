<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Chart.js for charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            display: flex;
        }
        /* Sidebar styles */
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            min-height: 100vh;
            padding-top: 20px;
        }
        .sidebar ul {
            list-style: none;
            padding-left: 0;
        }
        .sidebar ul li {
            padding: 10px;
        }
        .sidebar ul li a {
            color: white;
            text-decoration: none;
        }
        .sidebar ul li a:hover {
            color: #ffdd57;
        }
        .content {
            flex-grow: 1;
            padding: 20px;
        }
        .chart-container {
            width: 100%;
            height: 400px;
        }
        .filters {
            margin-bottom: 20px;
        }
        .totals {
            margin-top: 20px;
        }
        .totals div {
            font-weight: bold;
            margin-bottom: 10px;
        }
        .percentage {
            font-size: 0.9em;
            margin-left: 10px;
        }
        .positive {
            color: blue;
        }
        .negative {
            color: red;
        }
    </style>
</head>
<body>
    <!-- Sidebar Menu -->
    <div class="sidebar">
        <ul>
            <li><a asp-controller="ProMan" asp-action="Index">Home</a></li>
            <li><a asp-controller="ProMan" asp-action="Display">Product</a></li>
            <li><a asp-controller="CatMan" asp-action="Display" >Category</a></li>
            <li><a href="#">Order</a></li>
            <li><a asp-controller="UserMan" asp-action="Display">User</a></li>
            <li><a href="#">Statistics</a></li>
            <li><a href="#">Comment</a></li>
            <li><a asp-controller="ProMan" asp-action="ProductLog">Product's Log</a></li>
            <li><a asp-action="Logout" asp-controller="Acc">Log out</a></li>
        </ul>
    </div>
    <!-- Main Content Area -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
