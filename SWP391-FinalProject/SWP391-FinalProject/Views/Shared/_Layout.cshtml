<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SWP391_FinalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SWP391_FinalProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <!-- Header -->
    <header class="bg-dark text-white text-center py-4">
        <h1>Product </h1>
        <nav>
            <a href="#" class="text-white mx-2">Home</a>
            <a href="#" class="text-white mx-2">Products</a>
            <a href="#" class="text-white mx-2">Contact</a>
            <a asp-controller="Acc" asp-action="Login">Login</a>
        </nav>
    </header>
    <!-- Content Body -->
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Left Menu (Categories) -->
            <div class="col-md-2">
                <div class="card">
                    <div class="card-header">
                        <h5>Categories</h5>
                    </div>
                    @await Component.InvokeAsync("Category");
                </div>
            </div>

            <!-- Right Side (Best Selling Products) -->
            <div class="col-md-10">
                <!-- Search Bar -->
                <form asp-asp-controller="Pro" asp-action="SearchedProduct" method="get" class="input-group mb-3">
                    <input type="text" name="keyword" class="form-control" placeholder="Search products..." aria-label="Search products" required>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </form>
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SWP391_FinalProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
