<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SWP391_FinalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SWP391_FinalProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    @await Component.InvokeAsync("Header")

    <!-- Content Body -->
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Left Menu (Categories) -->
            <div class="col-md-2">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Categories</h5>
                    </div>
                    <div class="card-body p-2">
                        <!-- Laptops Category -->
                        <div class="category-section mb-3">
                            <h6 class="text-secondary font-weight-bold">Laptops</h6>
                            <ul class="list-group list-group-flush">
                                @await Component.InvokeAsync("Category", new { CatType = "Laptops" })
                            </ul>
                        </div>

                        <!-- Phones Category -->
                        <div class="category-section mb-3">
                            <h6 class="text-secondary font-weight-bold">Phones</h6>
                            <ul class="list-group list-group-flush">
                                @await Component.InvokeAsync("Category", new { CatType = "Phones" })
                            </ul>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Right Side (Best Selling Products) -->
            <div class="col-md-10">

                <!-- Search Bar -->
                <form asp-asp-controller="Pro" asp-action="SearchedProduct" method="get" class="input-group mb-3">
                    <input type="text" name="keyword" class="form-control" placeholder="Search products..." aria-label="Search products" required>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </form>
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SWP391_FinalProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
