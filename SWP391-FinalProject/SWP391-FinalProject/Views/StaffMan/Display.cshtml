<script>
    // Generate a list of future Mondays starting from 1st October 2024
    function generateMondayOptions() {
        const select = document.getElementById('monday-select');
        let startDate = new Date('2024-10-20');

        // Ensure start date is a Monday
        const dayOfWeek = startDate.getDay(); // 0 = Sunday, 1 = Monday, ...
        if (dayOfWeek !== 1) {
            startDate.setDate(startDate.getDate() + (8 - dayOfWeek) % 7); // Move to the next Monday
        }

        // Populate the select with the next 10 Mondays starting from 1st Oct 2024 or later
        for (let i = 0; i < 10; i++) {
            const mondayDate = new Date(startDate);
            mondayDate.setDate(startDate.getDate() + i * 7);

            const option = document.createElement('option');
            option.value = mondayDate.toISOString().split('T')[0];
            option.text = mondayDate.toDateString();
            select.appendChild(option);
        }
    }

    // Update table dates based on the selected Monday
    function updateTableDates() {
        const selectedMonday = new Date(document.getElementById('monday-select').value);
        const tableHeaders = document.querySelectorAll('#schedule-table thead th');

        for (let i = 1; i <= 5; i++) {
            const currentDate = new Date(selectedMonday);
            currentDate.setDate(selectedMonday.getDate() + (i - 1));
            tableHeaders[i].textContent = currentDate.toDateString();
        }
        updateTotalWeeklyPay(); // Update total pay when date changes
    }

    // Calculate Total Weekly Pay
    function updateTotalWeeklyPay() {
        const hourlyRate = parseFloat(document.getElementById('hourly-rate').value) || 0;
        const totalHoursWorked = 40; // Assuming full-time 40 hours a week
        const totalPay = hourlyRate * totalHoursWorked;

        document.getElementById('total-weekly-pay').textContent = totalPay.toFixed(2);
    }

    // Add a new staff row
    function addStaff() {
        const emailInput = document.getElementById('email-input');
        const email = emailInput.value.trim();

        if (!email) {
            alert('Please enter a valid email address.');
            return;
        }

        const tableBody = document.querySelector('#staff-table tbody');
        const newRow = document.createElement('tr');
        newRow.innerHTML = `
                        <td>${tableBody.children.length + 1}</td>
                        <td>${email}</td>
                        <td>--</td>
                        <td>--</td>
                        <td>--</td>
                        <td>Inactive</td>
                    `;

        tableBody.appendChild(newRow);
        emailInput.value = ''; // Clear input after adding
    }

    // Save function (temporary alert)
    function saveData() {
        alert('Data has been saved!');
    }

    // Initialize the page
    window.onload = generateMondayOptions;
</script>
<!-- Schedule Management Section -->
