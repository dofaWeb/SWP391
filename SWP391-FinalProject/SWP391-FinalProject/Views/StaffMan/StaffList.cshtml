@{
    Layout = "_AdminLayout";
}
<style>

    .container {
        max-width: 1200px;
        margin: auto;
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th,
    td {
        border: 1px solid #ddd;
        text-align: center;
        padding: 10px;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .pagination {
        margin-top: 15px;
        text-align: center;
    }

        .pagination a, .pagination span {
            margin: 0 5px;
            padding: 8px 12px;
            border: 1px solid #ddd;
            text-decoration: none;
            color: #007bff;
        }

        .pagination .active {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }
</style>
@using PagedList.Core.Mvc;  // Import pagination helper
@using PagedList.Core;  // For PagedList objects
@model IEnumerable<SWP391_FinalProject.Models.StaffModel>

<div class="container mt-5">
    <h1 class="text-center">Shift Schedule</h1>

    <table class="table table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th>Staff Name</th>
                <th>Date</th>
                <th>Shift</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Shift)
            {
                <tr>
                    <td>@item.StaffName</td>
                    <td>@item.Date</td>
                    <td>@item.Shift</td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation" class="d-flex justify-content-center mt-4">
        <ul class="pagination">
            <!-- Previous Page -->
            <li class="page-item @(ViewBag.Shift.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("StaffList", new { page = ViewBag.Shift.PageNumber - 1 })">
                    Previous
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= ViewBag.Shift.PageCount; i++)
            {
                <li class="page-item @(i == ViewBag.Shift.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("StaffList", new { page = i })">@i</a>
                </li>
            }

            <!-- Next Page -->
            <li class="page-item @(ViewBag.Shift.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("StaffList", new { page = ViewBag.Shift.PageNumber + 1 })">
                    Next
                </a>
            </li>
        </ul>
    </nav>
</div>
<div class="container">
    Staff List
    <table class="StaffList" id="staff-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Total Hours Worked</th>
                <th>Total Pay ($)</th>
                <th>Total Orders</th>
                <th>Avg Orders per Shift</th>
                <th>Total Money Made</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.TotalHourWorked</td>
                    <td>@item.TotalPay</td>
                    <td>@item.TotalOrders</td>
                    <td>@item.AvgOrder</td>
                    <td>@item.TotalMoneyMade</td>
                    <td>@item.Account.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
