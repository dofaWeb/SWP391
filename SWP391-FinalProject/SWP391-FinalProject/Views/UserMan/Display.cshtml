@{
    Layout = "_AdminLayout";
}
@using System.Security.Claims
@model IEnumerable<SWP391_FinalProject.Models.AccountModel>
<style>
    .user-page-container {
        margin-top: 30px;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .action-buttons button {
        margin-right: 5px;
    }

    .filter-container {
        margin-bottom: 20px;
    }
</style>
<!-- Header -->
<header class="bg-dark text-white text-center py-4">
    <h1>User Management</h1>
</header>

<!-- User Management Container -->
<div class="container user-page-container">

    <h3>All Users</h3>
    <div class="form-group">
        <label for="searchInput">Search Users</label>
        <input type="text" class="form-control" id="searchInput" placeholder="Enter User by Username">
    </div>
    @{
        var roleClaim = User.FindFirst(ClaimTypes.Role);
    }
    <table class="table table-bordered" id="userTable">
        <thead class="thead-dark">
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Role</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-role="admin">
                    <td>@item.Id</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.RoleName</td>
                    <td><span class="badge badge-success">@item.Status</span></td>
                    <td class="action-buttons">
                        @if (item.RoleName == "User")
                        {
                            <a asp-action="ViewDetail" asp-controller="UserMan" asp-route-id="@item.Id" class="btn btn-info btn-sm">View</a>
                        }
                        
                        @if (@item.RoleName != "Admin")
                        {
                            @if (roleClaim.Value == "Role0002") //staff
                            {
                                if (item.RoleName != "Staff")
                                {
                                    @if (item.Status == "Active")
                                    {
                                        <a asp-controller="UserMan" asp-action="Ban" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Ban</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="UserMan" asp-action="Ban" asp-route-id="@item.Id" class="btn btn-danger btn-sm">UnBan</a>
                                    }
                                }
                            }
                            else if (roleClaim.Value == "Role0001") // admin
                            {
                                @if (item.Status == "Active")
                                {
                                    <a asp-controller="UserMan" asp-action="Ban" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Ban</a>
                                }
                                else
                                {
                                    <a asp-controller="UserMan" asp-action="Ban" asp-route-id="@item.Id" class="btn btn-danger btn-sm">UnBan</a>
                                }
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function () {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');
        rows.forEach(row => {
            const nameCell = row.cells[2].textContent.toLowerCase(); // Updated index for name cell
            const idCell = row.cells[1].textContent.toLowerCase(); // Updated index for ID cell
            if (nameCell.includes(filter) || idCell.includes(filter)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>
